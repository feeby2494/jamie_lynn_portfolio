extends layout

block content
  .row
    .col-md-6.col-md-offset-3
      h1.display-3.m-b-2 Sign Up!

      // signup form
      form(method='POST', action='/signup')
        div.form-group
          label(for='name') Name:
          input#name.form-control(type='text', placeholder='Both first and last' name='name')
        div.form-group
          label(for='email') Email:
          input#email.form-control(type='email', placeholder='name@gmail.com' name='email')
        div.form-group
          label(for='favoriteCar') Your favorite car:
          input#pw.form-control(type='text', placeholder='2001 Toyota Corolla S' name='favoriteCar')
        div.form-group
          label(for='pw') Password:
          input#pw.form-control(type='password' name='password')
        div.form-group
          label(for='pw2') Confirm Password:
          input#pw2.form-control(type='password' name='confirmPassword')
        button.btn.btn-primary(type='submit') Sign Up
